<div class="jumbotron">
  <h1>Welcome to Marios Food</h1>
</div>



<div class="container">
  <p><%= link_to "All Products", products_path %></p>

  <h3>Our Most Reviewed Product</h3>
  <p><%= link_to @top_reviewed_product.name, product_path(@top_reviewed_product) %></p>

  <h3>Our Three Newest Products</h3>
  <ol>
  <% @newest_products.each do |product| %>
  <li><%= link_to product.name, product_path(product) %></li>
  <% end %>
  </ol>

  <h3>Products Made in The USA</h3>

  <% @usa_products.each do |product| %>
  <p><%= link_to product.name, product_path(product) %></p>
  <% end %>
</div>
