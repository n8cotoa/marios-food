<%= render 'layouts/errors', :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author%>

  <%= f.label :content_body %>
  <%= f.text_field :content_body %>

  <%= f.label :rating %>
  <%= f.text_field :rating %>

  <%= f.hidden_field :product_id, value: @product.id %>

  <%= f.submit %>
<% end %>
